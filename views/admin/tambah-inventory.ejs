<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Tambah Data Inventory</h1>
    </div>

    <!-- Here is body code -->
    <% if (typeof errors != 'undefined') { %>
        <div class="alert alert-danger" role="alert">
            <% errors.forEach(error => { %>
                <li>
                    <%= error.msg %>
                </li>
            <% }) %>
        </div>
    <% } %>
    <form action="/admin/add-inventory" method="post">
        <div class="form-group">
            <label for="id_product">Nama Product</label>
            <select class="form-control" id="id_product" name="id_product">
                <% products.forEach(data => { %>
                    <option value="<%= data.id %>"><%= data.nama_product %></option>
                <% }) %>
            </select>
        </div>
        <div class="form-group">
            <label for="jumlah_masuk">Jumlah Masuk</label>
            <input type="text" class="form-control" id="jumlah_masuk" name="jumlah_masuk">
        </div>
        <div class="form-group">
            <label for="jumlah_keluar">Jumlah Keluar</label>
            <input type="text" class="form-control" id="jumlah_keluar" name="jumlah_keluar">
        </div>
        <button type="submit" class="btn btn-primary btn-block">Submit</button>
    </form>
</div>
<!-- /.container-fluid -->

</div>
<!-- End of Main Content -->